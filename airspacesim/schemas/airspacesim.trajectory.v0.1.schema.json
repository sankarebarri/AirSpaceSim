{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://airspacesim.local/schemas/airspacesim.trajectory.v0.1.schema.json",
  "title": "AirSpaceSim Trajectory v0.1",
  "type": "object",
  "required": ["schema", "metadata", "data"],
  "properties": {
    "schema": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": { "const": "airspacesim.trajectory" },
        "version": { "const": "0.1" }
      },
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "required": ["source", "generated_utc"],
      "properties": {
        "source": { "type": "string" },
        "generated_utc": { "type": "string" }
      },
      "additionalProperties": true
    },
    "data": {
      "type": "object",
      "required": ["tracks"],
      "properties": {
        "tracks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "route_id", "position_dd", "status", "updated_utc"],
            "properties": {
              "id": { "type": "string" },
              "route_id": { "type": "string" },
              "position_dd": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": { "type": "number" }
              },
              "status": { "type": "string" },
              "updated_utc": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
